<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @my_thread.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @my_thread.content %>
</p>

<p>
<%= form_for [@my_thread, @my_thread.my_comments.build] do |f| %>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>
</p>

<ul>
<% @my_thread.my_comments.each do |my_comment| %>
<li>
  <%= my_comment.content %>
  <%= my_comment.id %>
  <%= link_to "Delete", my_thread_my_comment_path(:id=>10, :my_thread_id=>my_comment.my_thread_id), method: :delete, data: {confirm: "are you sure?"} %>  
  <%= my_comment.id %>
</li>
<% end %>
</ul>

<%= link_to 'Edit', edit_my_thread_path(@my_thread) %> |
<%= link_to 'Back', my_threads_path %>
